# Vifi.ee Frontend - Local Development Configuration
# Copy this file to .env for local development with docker-compose
# Usage: cp .env.local.example .env && docker-compose up

# ============================================================================
# REQUIRED CONFIGURATION (Localhost Defaults)
# ============================================================================

# API Configuration
API_URL=//localhost:3000/api/
API_KEY=dev-api-key

# ============================================================================
# MEDIA & STREAMING URLS (Localhost)
# ============================================================================

# Video Streaming
HLS_URL=http://localhost:8081/vod/vod
MP4_URL=//localhost:8081/zsf/
RTMP_URL=rtmp://localhost:1935/vod

# Content Delivery
SUBTITLES_URL=//localhost:8081/subs/
IMAGE_OPTIMIZER_URL=//localhost:8081/files/images/image.php
SPEEDTEST_URL=//localhost:8081/files/bwtest.jpg

# Additional Endpoints
CHANNEL_URL=//localhost:8080/channel.html
CACHED_INIT_URL=//localhost:8080/init.json

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

SITE_NAME=Vifi Local
ANONYMOUS_USERNAME=anonymous@localhost
DISQUS_SHORTNAME=vifi

# ============================================================================
# SOCIAL MEDIA & EXTERNAL LINKS
# ============================================================================

WWW_URL=//localhost:8080
SOCIAL_FACEBOOK_URL=https://www.facebook.com/pages/Vifiee/385723814833754
SOCIAL_TWITTER_URL=https://twitter.com/vifi_ee
RSS_FEED_URL=//localhost:8080/feed

# ============================================================================
# SUPPORT & CONTACT INFORMATION
# ============================================================================

SUPPORT_PHONE=+372 58 667 570
SUPPORT_EMAIL=support@localhost
PRIVACY_URL=//localhost:8080/privacy

# ============================================================================
# OPTIONAL INTEGRATIONS (leave empty to disable)
# ============================================================================

FACEBOOK_APP_ID=
GOOGLE_ANALYTICS_CODE=
SENTRY_DSN=

# ============================================================================
# DOCKER PORTS (Optional - override default ports)
# ============================================================================

# Frontend HTTP port (default: 8080)
PORT=8080

# Development server port (default: 3000) - only used with docker-compose.dev.yml
DEV_PORT=3000
